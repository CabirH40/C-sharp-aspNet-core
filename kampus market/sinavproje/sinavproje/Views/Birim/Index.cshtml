@model sinavproje.Models.dbbirim

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("birimInsert", "birim", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            <label>Birim Adı: </label>
            @Html.TextBoxFor(x => x.birim, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Açıklama: </label>
            @Html.TextAreaFor(x => x.aciklama, new { @class = "form-control", @rows = 4 })
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Insert</button>
        </div>
    </div>
}