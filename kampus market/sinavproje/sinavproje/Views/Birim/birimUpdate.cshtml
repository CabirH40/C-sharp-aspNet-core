@model sinavproje.Models.dbbirim

@{
    ViewBag.Title = "birimUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Birim</h2>

@using (Html.BeginForm("birimUpdate", "birim", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            <label>Birim Adı</label>
            @Html.TextBoxFor(x => x.birim, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Açıklama</label>
            @Html.TextAreaFor(x => x.aciklama, new { @class = "form-control", @rows = 4 })
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Update</button>

        </div>
    </div>
}
