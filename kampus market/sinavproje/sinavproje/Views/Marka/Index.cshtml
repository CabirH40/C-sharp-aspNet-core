@model sinavproje.Models.dbmarka

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("markaInsert", "Marka", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="form-group">
            <label>Marka Adı: </label>
            @Html.TextBoxFor(x => x.markaAdi, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Kategori Adı: </label>
            @Html.DropDownListFor(x => x.kategoriId, (List<SelectListItem>)ViewBag.kategoriler, new { @class = "form-control", @name = "kategoriId" })
        </div>
        <div class="form-group">
            <label>Açıklama: </label>
            @Html.TextAreaFor(x => x.aciklama, new { @class = "form-control", @rows = "3" })
        </div>

        <div class="form-group">
            <label>Image: </label>
            <input type="file" name="file" id="file" style="width: 100%;" />
        </div>

        <div class="form-group">
            <input type="submit" value="Upload Student Info" class="btn btn-primary" />
        </div>
    </div>
}
